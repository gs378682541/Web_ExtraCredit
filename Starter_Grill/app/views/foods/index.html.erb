<h1>Listing foods</h1>

<table>
  <tr>
    <th>Typename</th>
    <th>Foodname</th>
    <th>Fooddescription</th>
    <th>Foodprice</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.typeName %></td>
    <td><%= food.foodName %></td>
    <td><%= food.foodDescription %></td>
    <td><%= food.foodPrice %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

